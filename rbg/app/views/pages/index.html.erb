<h1>Creador de Color</h1>
<br>

<input type="text" value="255" class="dial" id="red" data-min="0" data-max="255">

<input type="text" value="0" class="dial" id="green" data-min="0" data-max="255">

<input type="text" value="0" class="dial" id="blue" data-min="0" data-max="255">
<br><br>
<script>
    $(function() {
      $(".dial").knob({
        'draw' : function () { 
          var red = $("#red").val();
          var green = $("#green").val();
          var blue = $("#blue").val();
          $("#rectangle").css('background-color',"rgb(" + red +"," +green+ ","+blue+")");
          $("#rgb").text("rgb(" + red +"," +green+ ","+blue+")");
        }
      });
    });
</script>

<h2 id="rgb">RBG</h2>
<br>

<div style="width:800px; height:300px;"  id="rectangle"></div>