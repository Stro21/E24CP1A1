<h1>Creador de Color</h1>
<br>

<input type="text" value="0" class="dial" id="red" data-min="0" data-max="255">

<input type="text" value="0" class="dial" id="green" data-min="0" data-max="255">

<input type="text" value="0" class="dial" id="blue" data-min="0" data-max="255">
<br><br>
<script>
    $(function() {
      $(".dial").knob({
        'change' : function () { 
          var red = $("#red").val();
          var green = $("#green").val();
          var blue = $("#blue").val();
          $("#rectangle").css("background-color", "rgb(" + red + "," + green + "," blue + ")");
        }
      });
    });
</script>

<h2 id="rgb">RBG</h2>
<br>
<svg width="1000" height="310">
  <%# <rect width="800" height="300" style="fill:rgb(0,0,255)" /> %>
  <rect width="800" height="300" id="rectangle" />
</svg>

<script>
  function color() {
    var red = rgbToHex(document.getElementById("red").value);
    var green = rgbToHex(document.getElementById("green").value);
    var blue = rgbToHex(document.getElementById("blue").value);
    var color = "#" + red + green + blue;
    document.getElementById("rectangle").style.background = color;
  }
</script>